//This fixes nf-core launch error: roject <project-name> is currently stickied on revision: main 
manifest.defaultBranch = "nextflow-tower"

// Global default params, used in configs
params {
  SAMPLEFILE = null
  sangerID = null
  timestamp = (new Date()).getTime()
  reference = '/nfs/cellgeni/STAR/human/2020A/index'
  keep_bams = false
  HELP = false
}

// Singularity environment parameters
singularity {
  enabled     = true
  autoMounts  = true
  cacheDir = '/nfs/cellgeni/singularity/images/'
  runOptions = '-B /lustre,/nfs'
}

// Configuring LSF job submission parameters for each process
executor {
  name = 'lsf'
  perJobMemLimit = true
}

process {
  withName: email_startup {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
  withName: get_starsolo {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
    maxForks = 5
  }
  withName: crams_to_fastqs {
    cpus = 16
    memory = 128.GB
    queue = 'long'
    maxForks = 5
  }
  withName: run_starsolo {
    container = '/nfs/cellgeni/singularity/images/starsolo_2-7-10a-alpha-220818_samtools_1-15-1_seqtk-1-13_bbmap_38-97_RSEM-1-3-3.sif' 
    cpus = 16
    memory = 128.GB
    queue = 'long'
    maxForks = 5
  }
  withName: email_finish {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
}
// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

// Capturing Nextflow log files into a reports directory
timeline {
   enabled = true
   file = "/lustre/scratch127/cellgen/cellgeni/tickets/nextflow-tower-results/${params.sangerID}/${params.timestamp}/starsolo-reports/timeline.html" 
   overwrite = true
}

report {
   enabled = true
   file = "/lustre/scratch127/cellgen/cellgeni/tickets/nextflow-tower-results/${params.sangerID}/${params.timestamp}/starsolo-reports/report.html"
   overwrite = true
}

trace {
   enabled = true
   file = "/lustre/scratch127/cellgen/cellgeni/tickets/nextflow-tower-results/${params.sangerID}/${params.timestamp}/starsolo-reports/trace.txt"
   overwrite = true
}

// Ensures work directories and removed when pipeline completes
cleanup = true
